                        <ul>
                            <li><a href="#"><i class="fa fa-user"></i> My Account</a></li>
                            <li><a href="#"><i class="fa fa-heart"></i> Wishlist</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Cart"><i class="fa fa-user"></i> My Cart</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Checkout"><i class="fa fa-user"></i> Checkout</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Login"><i class="fa fa-user"></i> Login</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="header-right">
                        <ul class="list-unstyled list-inline">
                            <li class="dropdown dropdown-small">
